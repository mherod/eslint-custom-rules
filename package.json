{
  "name": "@mherod/eslint-plugin-custom",
  "version": "1.2.2",
  "description": "Modular ESLint plugin with specialized rules for TypeScript, React/Next.js, Vue.js, security, and general code quality",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./typescript": {
      "types": "./dist/typescript.d.ts",
      "import": "./dist/typescript.mjs",
      "require": "./dist/typescript.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "import": "./dist/vue.mjs",
      "require": "./dist/vue.js"
    },
    "./general": {
      "types": "./dist/general.d.ts",
      "import": "./dist/general.mjs",
      "require": "./dist/general.js"
    },
    "./security": {
      "types": "./dist/security.d.ts",
      "import": "./dist/security.mjs",
      "require": "./dist/security.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck && npm run test"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "tsx",
    "react",
    "typescript",
    "custom-rules"
  ],
  "author": "Matthew Herod",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/eslint": "^8.56.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/rule-tester": "^8.44.0",
    "@typescript-eslint/types": "^8.0.0",
    "@typescript-eslint/utils": "^8.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lefthook": "^1.13.1",
    "lint-staged": "^16.1.6",
    "ts-jest": "^29.2.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "ultracite": "^5.4.3"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0 || ^9.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
